<h1>Skate Park</h1>

<div class="py-4">
  <h2>Datos del perfil</h2>
  <hr class="w-50" />

  <!-- Formulario para actualizar datos -->
  <form action="/update/{{skater.id}}?_method=PUT" method="POST">
    <div class="form-group row w-50 m-auto">
      <div class="form-group col-12 col-sm-6">
        <label>Email</label>
        <input class="form-control m-auto" name="email" value="{{skater.email}}" />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Nombre</label>
        <input class="form-control m-auto" name="nombre" value="{{skater.nombre}}" />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Password</label>
        <input type="password" class="form-control m-auto" name="password" />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Repita la password</label>
        <input type="password" class="form-control m-auto" name="password_repeat" />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>AÃ±os de experiencia</label>
        <input class="form-control m-auto" name="anos_experiencia" value="{{skater.anos_experiencia}}" />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Especialidad</label>
        <input class="form-control m-auto" name="especialidad" value="{{skater.especialidad}}" />
      </div>
    </div>
    <div class="mb-1">
      <button type="submit" class="btn btn-primary">Actualizar</button>
    </div>
  </form>

  <!-- Formulario para eliminar cuenta -->
  <form action="/delete/{{skater.id}}?_method=DELETE" method="POST">
    <div>
      <button type="submit" class="btn btn-danger">Eliminar cuenta</button>
    </div>
  </form>
</div>

